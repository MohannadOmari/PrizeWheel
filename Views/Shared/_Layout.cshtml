<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UmniahPrizeWheel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UmniahPrizeWheel.styles.css" asp-append-version="true" />
    <script src="~/js/Winwheel.js"></script>
    <script type="text/javascript" src="https://unpkg.com/gsap@2.1.3/./umd/TweenMax.js"></script>
    <script src = "~/Scripts/jquery-ui-1.8.24.min.js" type = "text/javascript"></script> 
    <script src = "~/Scripts/jquery.unobtrusive-ajax.min.js" type = "text/javascript"></script>
</head>
<body>
    <header>
        <nav class="navbar border-bottom box-shadow mb-3">
            <a class="navbar-brand">
                <img src="~/logo.png" class="d-inline-block align-top" alt="umniah logo" />
            </a>
            <div class="mx-auto">
                <h1 id="textcolor">Spin The Wheel</h1>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center" id="textcolor">
           Umniah&copy; 2022
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
